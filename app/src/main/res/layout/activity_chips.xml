<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chip_cl"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".components.ChipsActivity">

    <LinearLayout
            android:id="@+id/chip_entry_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/chip_filter_hsv"
            android:weightSum="1"
            tools:ignore="UnusedAttribute">

        <HorizontalScrollView
                android:id="@+id/chip_entry_hsv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                tools:ignore="UnusedAttribute">

            <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_entry_cg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleLine="true">

                <com.google.android.material.chip.Chip
                        android:id="@+id/chip_entry_chip1"
                        style="@style/Widget.MaterialComponents.Chip.Entry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipIcon="@drawable/ic_avatar_circle_24"
                        android:checkable="false"
                        android:text="Dhruv Gupta"/>

                <com.google.android.material.chip.Chip
                        android:id="@+id/chip_entry_chip2"
                        style="@style/Widget.MaterialComponents.Chip.Entry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipIcon="@drawable/ic_avatar_circle_24"
                        android:checkable="false"
                        android:text="DG.47"/>

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/chip_entry_ib"
                android:layout_marginVertical="8dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                style="@style/Widget.AppCompat.ImageButton"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_refresh_black_24dp"
        />

    </LinearLayout>

    <HorizontalScrollView
            android:id="@+id/chip_filter_hsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/chip_entry_ll"
            app:layout_constraintLeft_toLeftOf="@id/chip_entry_ll"
            app:layout_constraintRight_toRightOf="@id/chip_entry_ll"
            app:layout_constraintBottom_toTopOf="@id/chip_choice_hsv"
            android:paddingHorizontal="16dp"
            tools:ignore="UnusedAttribute">

        <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_filter_cg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true">

            <!-- Chips can be declared here, or added dynamically. -->
            <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fire"/>

            <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water"/>

            <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Psychic"/>

            <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poison"/>

            <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kicking"/>

            <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grass"/>

            <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mysterious"/>

            <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fish"/>

            <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electric"/>

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <HorizontalScrollView
            android:id="@+id/chip_choice_hsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/chip_filter_hsv"
            app:layout_constraintLeft_toLeftOf="@id/chip_filter_hsv"
            app:layout_constraintRight_toRightOf="@id/chip_filter_hsv"
            app:layout_constraintBottom_toTopOf="@id/chip_action_hsv"
            android:paddingHorizontal="16dp"
            tools:ignore="UnusedAttribute">

        <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_choice_cg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:singleSelection="true">

            <!-- Chips can be declared here, or added dynamically. -->
            <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Small"/>

            <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Large"/>

            <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Medium"/>

            <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="XLarge"/>

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <HorizontalScrollView
            android:id="@+id/chip_action_hsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/chip_choice_hsv"
            app:layout_constraintLeft_toLeftOf="@id/chip_choice_hsv"
            app:layout_constraintRight_toRightOf="@id/chip_choice_hsv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingHorizontal="8dp"
            tools:ignore="UnusedAttribute">

        <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_action_cg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true">

            <!-- Chips can be declared here, or added dynamically. -->
            <com.google.android.material.chip.Chip
                    android:id="@+id/turnLightsOnChip"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Turn on lights"
                    app:chipIcon="@drawable/baseline_brightness_5_black_24"/>

            <com.google.android.material.chip.Chip
                    android:id="@+id/setAlarmChip"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Set alarm"
                    app:chipIcon="@drawable/baseline_alarm_black_24"/>

            <com.google.android.material.chip.Chip
                    android:id="@+id/playMusicChip"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play music"
                    app:chipIcon="@drawable/baseline_music_note_black_24"/>

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>